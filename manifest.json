{
  "manifest_version": 3,
  "name": "Word Cloud Generator",
  "version": "1.0",
  "description": "Generates a word cloud for the content of the current tab.",
  "host_permissions": ["https://flow-server-kappa.vercel.app/api/*", "https://openweathermap.org/img/wn/*","https://example.com/"],
  "permissions": ["activeTab", "storage", "tabs", "scripting"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

